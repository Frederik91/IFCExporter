<UserControl x:Class="IFCManager.View.FolderMonitorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IFCManager.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="730">
    <Grid>

        <DataGrid ItemsSource="{Binding FileFolderLastUpdatedList}" AutoGenerateColumns="false">
            <DataGrid.Columns>
                <DataGridTextColumn Header ="Filename" Binding="{Binding FileName}"/>
                <DataGridTextColumn Header ="Export" Binding="{Binding Export}"/>
                <DataGridTextColumn Header ="Last drawing update" Binding="{Binding FolderUpdate}"/>
                <DataGridTextColumn Header ="Last IFC update" Binding="{Binding IfcUpdate}"/>
                <DataGridTextColumn Header ="Difference" Binding="{Binding Difference}"/>
                <DataGridTextColumn Header ="Status" Binding="{Binding Updated}"/>
                <DataGridTextColumn Header ="Last saved by" Binding="{Binding LastSavedBy}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
